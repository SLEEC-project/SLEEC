include "ticktock.csp"

Timed(et) {
	
channel E0
channel E1
channel m0 : Bool

-- Rule1 when E0 and (m0) then E1

Rule1 = TriggerRule1; MonitoringRule1; Rule1

TriggerRule1 = let
	MTrigger = StartBy(m0?vm0 ->
		if (vm0) then SKIP else TriggerRule1
	,0)
within E0 -> MTrigger

MonitoringRule1 = E1 -> SKIP

}
